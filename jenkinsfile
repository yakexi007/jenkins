pipeline {
    agent any
    // environment {
    //     BITBUCKET_COMMON_CREDS = credentials('test')
    // }
    parameters {
        string(name: 'abc', defaultValue: 'Hello', description: 'How should I greet the world?')
    }
    stages {
        stage("build") {
            steps{
                // echo "I said, Hello Mr. ${BITBUCKET_COMMON_CREDS_USR}"
                // echo "${BITBUCKET_COMMON_CREDS_PSW}"
                echo "${params.abc} World!" 
            }
        } // end stage
        stage("test") {
            steps{
                echo "test"
            }
        } // end stage
        stage("deploy") {
            steps{
                echo "deploy"
            }
        }
    } // end stages
}