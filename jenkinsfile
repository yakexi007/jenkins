pipeline {
    agent any
    environment {
        BITBUCKET_COMMON_CREDS = credentials('test')
    }
    stages {
        stage("build") {
            steps{
                echo "I said, Hello Mr. ${BITBUCKET_COMMON_CREDS_USR}"
                echo "${BITBUCKET_COMMON_CREDS_PSW}"
            }
        } // end stage
        stage("test") {
            steps{
                echo "test"
            }
        } // end stage
        stage("deploy") {
            steps{
                echo "deploy"
            }
        }
    } // end stages
}